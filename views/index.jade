!!! 5
html(lang='fr')
	head

	
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		title Bienvenue sur LinkFeed - Connectez-vous ou rejoignez-nous 
		link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,400')
		link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Droid+Sans')
		link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lobster')
		link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.min.css')
		link(rel='stylesheet', href='/css/font-awesome.css')
		link(rel='stylesheet', href='/css/style.css')
		
		//if lt IE 9
		script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
		
		script(src='/js/jquery-1.8.2.min.js')

		script(src='/bootstrap/js/bootstrap.min.js')
		
		script.
			$(document).ready(function() { 
				$('#passError').hide();
				
				$('#mdp_reg').bind('input',function () {
					if ($('#mdp_reg').val()!="" && $('#mdp_again').val()!=""){
						check();
					}
				});
				
				
				$('#mdp_again').bind('input',function () {
					if ($('#mdp_reg').val()!="" && $('#mdp_again').val()!=""){
						check();
					}
				});
				
			});
			
			function check(){
				if ($('#mdp_reg').val()!=$('#mdp_again').val()) 
				{
					$('#passError').hide();
					$('#passError').show();
					return false;
				}
				else
				{
					$('#passError').hide();
				}
			}
			

		
	body
		div.fullscreen_bg#fullscreen_bg
			div.page-title
				div.container
					div.row
						div.span12
							i.icon-tasks.page-title-icon
								h2 Share ! /
									p Bienvenue sur LinkFeed
								
			img.img-rounded(src='/linkfeed.png', width='750', style="margin-bottom:30px")
			
			div.container
				div.row
					div.span4.offset2.well
						div.row-fluid
							legend Identifiez-vous !
							- if (typeof(messageError) !== 'undefined'){
								div.alert.alert-danger.alert-dismissable
									button.close(type='button', data-dismiss='alert', aria-hidden='true') ×
									strong Erreur!
									|  #{messageError}
							-}
							form(method='POST', action='/user/login', accept-charset='UTF-8')
								div.left-inner-addon
									i.icon.icon-user
									input#username.span4(style="width:100%;", type='text', name='username', placeholder='Nom d\'utilisateur', required='required')
								div.left-inner-addon
									i.icon.icon-lock
									input#mdp.span4(style="width:100%;",type='password', name='mdp', placeholder='Mot de passe', required='required')
								button.btn.btn-info.btn-block(type='submit') Se connecter
							p.blue  © LinkFeed 2013 - Metz
							p.blue DA CONCEICAO Dylan - HAZAN Raphaël - MANDICA Simon - SZYMANSKI Loïc
								
					div.span3.well
						div.row-fluid
							legend Pas encore inscrit ?
							- if (typeof(messageError2) !== 'undefined'){
								div.alert.alert-danger.alert-dismissable
									button.close(type='button', data-dismiss='alert', aria-hidden='true') ×
									strong Erreur!
									|  #{messageError2}
								if messageError2
									script.
										$(document).ready(function() { 
											$('#registerbtn').click();
										});
							-}
							div.register-collapse.collapse
								form#registerForm(method='POST', action='/user/new', accept-charset='UTF-8')
									div.left-inner-addon
										i.icon.icon-user
										input#username(type='text', name='username', placeholder='Nom d\'utilisateur', required='required')
									div.left-inner-addon
										i.icon.icon-lock
										input#mdp_reg(type='password', name='mdp', placeholder='Mot de passe')
									div.left-inner-addon
										i.icon.icon-lock
										input#mdp_again(type='password', name='mdp_again', placeholder='Mot de passe \(confirmation\)')
									#passError.alert.alert-danger
										| Les mots de passe ne correspondent pas
									div.left-inner-addon
										i.icon.icon-envelope
										input#email(type='email', name='email', placeholder='Email', required='required')
									br
									button.btn.btn-info(type="submit", onClick="return check();") Valider
									a.btn.btn-danger(onClick="$('#registerbtn').show()", style="margin-left:15px", data-toggle='collapse', data-target='.register-collapse') Annuler	
							a.btn.btn-success.btn-block(id="registerbtn", onClick="$('#registerbtn').hide()", data-toggle='collapse', data-target='.register-collapse')
								| S'inscrire

			
