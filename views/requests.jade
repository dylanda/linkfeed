html(lang='fr')
	head
		meta(charset='utf-8')

		title LinkFeed - Demandes en attente de #{user}

		link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,400')
		link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Droid+Sans')
		link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lobster')
		link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.min.css')
		link(rel='stylesheet', href='/css/font-awesome.css')
		link(rel='stylesheet', href='/css/style.css')
		//if lt IE 9
		script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
		style.
			body{
			padding-top:100px;
			}

		script(src="/js/jquery-1.8.2.min.js")
		script(src="/bootstrap/js/bootstrap.min.js")
		script(src="/js/md5hash.js")
			
	body
		div.container
			div.header.row
				div.span12
					div.navbar.navbar-fixed-top
						div.navbar-inner
							a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
								span.icon-bar
								span.icon-bar
								span.icon-bar
							h1
								a.brand LinkFeed
							div.nav-collapse.collapse
								ul.nav.pull-right
									li
										a(href='/feed')
											i.icon-comments
											br
											| Mon Feed
									li
										a(href='/profil')
											i.icon-user
											br
											| Mon Profil
									li
										a(href='/user/logout')
											i.icon-off
											br
											| DÃ©connexion

		div.page-title
			div.container
				div.row
					div.span12
						i.icon-tasks.page-title-icon
						h2
							| Consultez vos demandes en attente
							| /

		
		div.container
			div.row
				div.span12
						if demandes
							h4.blue Voici vos demandes en attente :
							br
							table.table
								thead
									tr
										th
										th Nom d'utilisateur
										th Email
										th
								tbody
									each demande in demandes
										tr
											td
												script(type="text/javascript") email = "#{demande.email}";hash_email = calcMD5(email); document.write("<img src='http://www.gravatar.com/avatar/"+hash_email+"?s=80' />");
											td 
												a(href="profil/#{demande._id}") #{demande._id}
											td 
												a(href='mailto:#{demande.email}') #{demande.email}
											td
												a.btn.btn-success(href="/confirmRequest/#{demande._id}")
													| Confirmer
												a.btn.btn-danger(style='margin-left:3px', href="/rejectRequest/#{demande._id}")
													| Refuser
							br
							h6.blue Vous avez #{demandes.length} demandes en attente 


						else
							h4.blue Vous n'avez aucune demande
		
		br
		br
		br
		a(href="profil", class="btn btn-large btn-info") Retourner sur votre profil	


		
