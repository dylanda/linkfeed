		script.
		
			function fillTags(id, tags){
				var tagsarray = tags.split(",");
				$(id).select2('val',[tagsarray]);
			};
			
			function fillTitre() { 
				var regUrl = new RegExp('(^([a-z]*://)?(www.)?)', 'gi');
				var titre = $('#url').val().replace(regUrl,"");
				if (titre.indexOf(".")!=-1){
					var titre = titre.substring(0,titre.indexOf("."));
				}
				$('#titre').val(titre.charAt(0).toUpperCase()+titre.slice(1));
			};
		
			$(document).ready(function() { 
			
				$("[rel='tooltip']").tooltip();
			
				var myArray="#{data}";
				myArray=myArray.split(',');

				var filtresTab="#{filtresTab}";
				filtresTab=filtresTab.split(',');
			
		
			
				$("#e1").select2({
					width: 'resolve',
					tags:myArray,
					multiple: true,
					id: function(object) {
						return object.text.replace("#","");
					},
					closeOnSelect: true
				}); 
				
				
				$(".modtags").select2({
					width: 'resolve',
					tags:myArray,
					multiple: true,
					id: function(object) {
						return object.text.replace("#","");
					},
					closeOnSelect: true
				});
				
				
				$("#e2").select2({
					width: 'resolve',
					tags:myArray,
					multiple: true,
					id: function(object) {
						return object.text.replace("#","");
					},
					closeOnSelect: true
				}); 

				$("#e2").select2('val',[filtresTab]);
	
				
				$('body').on('touchstart.dropdown', '.dropdown-menu', function (e) {
					e.stopPropagation(); 
				});

				$('#passError').hide();

				$('#mdp').bind('input',function () {
					if ($('#mdp').val()!="" && $('#mdpConf').val()!=""){
						check();
					}
				});
				
				
				$('#mdpConf').bind('input',function () {
					if ($('#mdp').val()!="" && $('#mdpConf').val()!=""){
						check();
					}
				});
				
				$('#confirmDel').bind('input',function () {
						checkDel();
				});
				
			});
			
			function check(){
				if ($('#mdp').val()!=$('#mdpConf').val()) 
				{
					$('#passError').hide();
					$('#passError').show();
					return false;
				}
				else
				{
					$('#passError').hide();
				}
			};
			
			function checkDel(){
				if ($('#confirmDel').val().toLowerCase()!="supprimer mon compte") 
				{
					$('#confirmError').hide();
					$('#confirmError').show();
					return false;
				}
				else
				{
					$('#confirmError').hide();
				}
			};
			
			function searchTag(tag){
				$("#e2").select2('val',[tag]);
				$("#searchbtn").click();
			};

	body
			div.header.row
				div
					div.navbar.navbar-top
						div.navbar-inner
							a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
								span.icon-bar
								span.icon-bar
								span.icon-bar
							h1
								a.brand(href='/feed') LinkFeed
							div.nav-collapse.collapse
								ul.nav.pull-right
									li
										a(href='/feed')
